@import "../../../static/utils/common.wxss";
.container{
  width: 100%;
  height: 100%;
  background-color: #fff;
  overflow-y: scroll;
}
.container .search{
  width: 100%;
  height: 20%;
  background: #f6f6f6; 
  overflow: hidden;
  border-bottom: 2px solid #dcdcdc;
  position: relative;
}
.container .search .searchBox{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 60rpx;
  margin: auto;
}
.container .search .searchBox input{
  box-sizing: border-box;
  display: block;
  position: absolute;
  left: 10%;
  height: 60rpx;
  width: 80%;
  background: #ffffff;
  border: 1px solid #EFEFEF;
  border-radius: 10rpx;
  padding-left: 20rpx;
  font-size: 25rpx;
  padding-right: 100rpx;
}

.container .search .searchBox cover-image{
  display: block;
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 15%;
  top: 15rpx;
  z-index: 999;
}

.container .search input::-webkit-input-placeholder{
  color: #e0e0e0;
}

.container .mailLists{
  box-sizing: border-box;
  width: 100%;
  padding: 0 40rpx;
}

.container .mailLists .list{
  border-bottom: 2rpx solid #e5e5e5;
  display: flex;
  height: 100rpx;
}
.container .mailLists .list .header{
  width: 80rpx;
  height: 80rpx;
  margin-top: 10rpx;
  margin-right: 20rpx;
  border: 1px solid #eee;
  border-radius: 50%;
  overflow: hidden
}
.container .mailLists .list .header image{
  width: 100%;
  height: 100%
}
.container .mailLists .list .nickName{
  flex: 1;
  line-height: 100rpx;
  color: #959595;
  font-size: 32rpx;
}
.container .mailLists .list .userValue{
  flex: 2;
  text-align: right;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #adadad;
}
.container .userNum{
  text-align: center;
  font-size: 30rpx;
  margin-top: 20rpx;
  color: #666;
}
.container .userNum text{
  font-size: 20rpx;
  line-height: 36rpx;
  display: inline-block;
  margin: 0 20rpx;
}