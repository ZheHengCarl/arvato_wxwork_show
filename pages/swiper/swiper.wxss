@import "../../static/utils/common.wxss";
.container{
  background: #fef1f6
}

swiper-item {
  position: relative;
  overflow: hidden
}

.itemimage{
  position: absolute;
  margin: auto;
  top: 70rpx;
  left: 0;
  right: 0;
}

.skip,.inter{
  position: absolute;
  width: 100rpx;
  height: 50rpx;
  border:2rpx solid #859ba7;
  top: 60rpx;
  right: 30rpx;
  z-index: 22;
  text-align: center;
  background: #fff;
  color: #5d7581;
  line-height: 50rpx;
  font-size: 30rpx;
  border-radius: 8rpx;
}
