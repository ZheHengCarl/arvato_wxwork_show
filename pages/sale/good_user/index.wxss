@import "../../../static/utils/common.wxss";
.container{
  width: 100%;
  padding-bottom: 100rpx;
}

.container image{
  width: 100%;
}

.footer{
  width: 100%;
  height: 100rpx;
  box-sizing: content-box;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #ffffff;
  display: flex;
}


.footer .home{
  border-top: 0;
  height: 100rpx;
  flex: 1;  
  border-right: 2rpx solid #E6E4E4;
  background: #ffffff;
  padding-top: 20rpx;
}


.footer .cart,.footer .buy{
  flex: 3;
  height: 100rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 100rpx;
  color: #354B57;
  background: #ffffff;
}

.footer .buy{
  color: #ffffff;
  background: #DA202B;
}

.footer .home image{
  display: block;
  width: 44rpx;
  margin: 0 auto;
}

.footer .home view{
  font-size: 20rpx;
  color: #354C57;
  text-align: center
}