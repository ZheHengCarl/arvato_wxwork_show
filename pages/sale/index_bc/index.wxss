@import "../../../static/utils/common.wxss";
.container{
  width: 100%;
  height: 100%;
}

.header{
  width: 100%;
  height: 300rpx
}
.header  image{
  width: 95%;
  height: 300rpx;
  margin: 0 auto;
  display: block;
}

swiper{
  width: 100%;
  height: 300rpx,
}

swiper-item{
  text-align: center;
  width: 100%;
}

swiper-item image{
  width: 100%;
  height: 260rpx;
  border-radius: 8rpx;
}

.nav{
  width: 100%;
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #f7f7f7;
  overflow: hidden
}
.nav view{
  text-align: center
}
.nav view view{
  font-size: 28rpx;
  color: #869DA8;
  font-weight: bold;
}
.nav view image{
  width: 30rpx;
  height: 18rpx;
  margin: 10rpx auto 0;
  display: none
}
.nav .active view{
  color: #DA202B
}
.nav .active image{
  display: block
}

.section{
  width: 100%;
  height: 60%;
  padding:0 7%;
  overflow-y: scroll;
  overflow-x: hidden;
  position: relative;
}
.search{
  width: 70%;
  height: 75rpx;
  background-color: #F7F7F7;
  border-radius: 8rpx;
  margin-top: 30rpx;
  position: relative;
}
.search image{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  margin: auto;
  top: 0;
  bottom: 0;
  left: 20rpx;
}

.search input{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  padding-left: 80rpx;
  color: #869DA8;
  font-size: 24rpx;
}


.transform{
  width: 160rpx;
  height: 80rpx;
  position: absolute;
  right: 0;
  top: 400rpx;
}

.transform image{
  width: 100%;
  height: 100%;
}

.goodItem{
  padding: 30rpx 0;
  width: 100%;
  height: 260rpx;
  position: relative;
  border-bottom: 1rpx solid #F7F7F7
}

.goodItem image{
  height: 200rpx;
  width: 177rpx;
  float: left;
}

.goodItem .goodName{
  width: 100%;
  position: absolute;
  padding-left: 200rpx;
  color: #344C57;
  font-size: 28rpx;
  line-height: 60rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-weight: bold;
}

.goodItem .goodInfo{
  width: 100%;
  position: absolute;
  top: 90rpx;
  padding-left: 200rpx;
  color: #344C57;
  font-size: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.goodItem .goodInfo .goodIntroduce,.goodItem .goodInfo .goodSale{
  width: 100%;
  color: #869DA8;
  font-size: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.goodItem .goodInfo .goodPrice{
  width: 100%;
  color: #DA202B;
  font-size: 30rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-weight: bold;
  margin-top: 15rpx;
}

.goodItem .goodInfo .goodSale{
  margin-top: 15rpx;
}

.discount{
  position: absolute;
  right: 0;
  bottom: 30rpx;
  width: 150rpx;
  height: 60rpx;
  background: #DA202B;
  border-radius: 28rpx;
  text-align: center;
  box-shadow: 0 10rpx 8rpx #FFA4A8;
}

.discount text{
  font-size: 24rpx;
  color: #ffffff;
}

.discount .discountPrice{
  font-size: 34rpx
}

.footer{
  width: 100%;
  background: #ffffff;
  height: 100rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid #E6E4E4;
  z-index: 9
}

.fitBottom{
  height: 140rpx;
  padding-bottom: 40rpx;
}

.footer view{
  text-align: center;
  position: relative;
  width: 120rpx;
}

.footer view image{
  position: absolute;
  margin: auto;
  left: 0;
  right: 0;
  top: 8rpx;
  width: 45rpx;
  height: 45rpx;
}

.footer view .choosen{
  opacity: 1;
  z-index: 1
}

.footer .active .choosen{
  opacity: 0;
  z-index: -1
}

.footer view  text{
  font-size: 20rpx;
  color: #BEC6CB;
  display: block;
  text-align: center;
  position: absolute;
  width: 100%;
  top: 66rpx;
}

.footer .active text{
  color: #DA202B
}


.cover {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,0.3);
  z-index: 2;
  display: none;
}

.choose {
  width: 600rpx;
  height: 800rpx;
  background: #fff;
  /* background: url('http://minipro.arvatocrm.cn/arvato/img/?fileName=1544430916385.png'); */
  background-size: 100%;
  background-repeat: no-repeat;
  position: fixed;
  margin: auto;
  left: 0;
  right: 0;
  top: 80rpx;
  border-radius: 12rpx;
  z-index: 4;
  box-sizing: border-box;
  display: none;
}

.choose .chooseInfo {
  text-align: center;
  line-height: 140rpx;
  color: #666666;
  font-size: 34rpx;
}

.choose .chooseTip {
  text-align: center;
  font-size: 26rpx;
  color: #ACACAC;
  white-space: normal;
  line-height: 40rpx;
}

.choose .chooseId{
  margin-top: 150rpx;
  display: flex;
  justify-content: space-around;
  overflow: hidden
}

.choose .chooseId .chooseItem cover-image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  box-sizing: border-box
}

.choose .chooseId .chooseItem .userChoose{
  margin-top: 20rpx;
  text-align: center;
  font-size: 30rpx;
  color: #999999;
}

.choose .chooseId .active cover-image{
 border: 2px solid #FF9EA2;
}

.choose .chooseId .active .userChoose{
  color: #333333;
}

.ensureChoose{
  margin-top: 50rpx;
  width: 500rpx;
  height: 100rpx;
  border:none;
  border-radius: 48rpx;
  font-size: 34rpx;
  background: #DA202B;
  color: #fff;
}

.show{
  display: block;
}