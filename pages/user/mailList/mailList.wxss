@import "../../../static/utils/common.wxss";
.container{
  width: 100%;
  height: 100%;
  background-color: #F7F7F7;
  overflow-y: scroll;
}
.container .search{
  width: 100%;
  padding:0 30rpx;
  height: 120rpx;
  background: #ffffff; 
  overflow: hidden;
}
.container .search .searchBox{
  width: 100%;
  height: 60rpx;
  margin: 30rpx 0;
  position: relative;
  box-sizing: border-box
}
.container .search .searchBox input{
  box-sizing: border-box;
  display: block;
  position: absolute;
  left: 0;
  height: 60rpx;
  width: 100%;
  background: #F7F7F7;
  border: 1px solid #EFEFEF;
  border-radius: 10rpx;
  padding-right: 20rpx;
  font-size: 25rpx;
  padding-left: 100rpx;
}

.container .search .searchBox image{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  left: 40rpx;
  top: 15rpx;
  z-index: 999;
}

input::-webkit-input-placeholder{
  color: #c2ccd1;
}

.container .mailLists{
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx;
  background: #ffffff
}

.container .layout{
  overflow: hidden;
  background: #ffffff;
  margin-bottom: 16rpx;
}

.container .layout .mailtitle{
  height: 80rpx;
  padding: 0 30rpx;
}

.container .layout .mailtitle image{
  width: 16rpx;
  height: 28rpx;
  float: left;
  margin-top: 26rpx;
}

.container .layout .mailtitle .title{
  font-size: 28rpx;
  color: #333333;
  line-height: 80rpx;
  margin-left: 25rpx;
  float: left;
  font-weight: bold;
}

.container .layout .mailtitle .groupNum{
  float: right;
  line-height: 80rpx;
  color: #999999;
  font-size: 28rpx;
  width: 30%;
  text-align: right;
  font-weight: bold;
}

.container .mailLists .list{
  border-bottom: 2rpx solid #F7F7F7;
  display: flex;
  height: 100rpx;
}
.container .mailLists .list .header{
  width: 80rpx;
  height: 80rpx;
  margin-top: 10rpx;
  margin-right: 20rpx;
  border: 1px solid #eee;
  border-radius: 50%;
  overflow: hidden
}
.container .mailLists .list .header image{
  width: 100%;
  height: 100%
}
.container .mailLists .list .nickName{
  flex: 3;
  line-height: 100rpx;
  color: #333333;
  font-size: 28rpx;
}
.container .mailLists .list .userValue{
  flex: 2;
  text-align: right;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #999999;
}

.container .mailLists .list .userValue text{
  color: #DA202B;
  font-weight: bold;
}

.container .userNum{
  text-align: center;
  font-size: 30rpx;
  margin: 50rpx 0;
  color: #999999;
  overflow: hidden
}
.container .userNum text{
  font-size: 20rpx;
  line-height: 36rpx;
  display: inline-block;
  margin: 0 20rpx;
}
.ask{
  width: 120rpx;
  height: 138rpx;
  border-radius: 100%;
  position: fixed;
  right: 20rpx;
  bottom: 100rpx;
}

.ask image{
  width: 120rpx;
  height: 138rpx;
}

.cover {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,0.3);
  z-index: 998;
  display: none;
}

.shareCover{
  width: 600rpx;
  height: 1000rpx;
  position: fixed;
  margin: auto;
  left: 0;
  right: 0;
  top: 60rpx;
  background: #fff;
  border-radius: 6rpx;
  z-index: 999;
  padding: 60rpx 100rpx;
  display: none;
}

.smallImage{
  display: block;
  width: 400rpx;
  height: 630rpx;
  margin: 0 auto;
}

.sharePic{
  text-align: center;
  font-size: 24rpx;
  color: #999999;
  line-height: 80rpx;
  border-bottom: 2rpx solid #EEEEEE;
}


.shareButton{
  height: 200rpx;
  display: flex;
}

.shareButton view{
  flex: 1;
  text-align: center;
}

.shareButton view .pyq{
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx auto;
  position: relative
}

.shareButton view .pyq button{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 999;
  opacity: 0.01
}

.shareButton view .pyq image{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 998
}

.shareButton view button{
  background: #fff;
  font-size: 24rpx;
  color: #333333;
  border: none;
}

.shareButton view button::after{
border: none;
}

.closeShare{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  margin: auto;
  left: 0;
  right: 0;
  top: 1100rpx;
  z-index: 999;
  display: none;
}

.show{
  display: block
}