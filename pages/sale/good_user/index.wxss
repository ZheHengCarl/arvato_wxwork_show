.container{
  width: 100%;
  padding-bottom: 100rpx;
  overflow: hidden
}

.container .pic {
  overflow: hidden
}

.container .pic image{
  width: 100%;
  height: 2745.34rpx;
  display: block
}

.footer{
  width: 100%;
  height: 100rpx;
  box-sizing: content-box;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #ffffff;
  display: flex;
}

.fitBottom{
  height: 140rpx;
  padding-bottom: 40rpx;
}

.footer .home{
  border-top: 0;
  height: 100rpx;
  flex: 1;  
  border-right: 2rpx solid #E6E4E4;
  background: #ffffff;
  padding-top: 20rpx;
}


.footer .cart,.footer .buy{
  flex: 3;
  height: 100rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 100rpx;
  color: #354B57;
  background: #ffffff;
}

.footer .buy{
  color: #ffffff;
  background: #DA202B;
}

.footer .home image{
  display: block;
  width: 44rpx;
  margin: 0 auto;
}

.footer .home view{
  font-size: 20rpx;
  color: #354C57;
  text-align: center
}