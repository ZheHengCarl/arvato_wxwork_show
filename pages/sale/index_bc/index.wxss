view,input,image,swiper,button{
  box-sizing: border-box
}
pages{
  width: 100%;
  height: 100%;
  overflow: hidden
}
.container{
  width: 100%;
  height: 100%;
}

.header{
  width: 100%;
  height: 300rpx
}

swiper{
  width: 100%;
  height: 300rpx,
}

swiper-item{
  text-align: center;
  width: 100%;
}

swiper-item image{
  width: 95%;
  height: 260rpx;
  border-radius: 8rpx;
}

.nav{
  width: 100%;
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #f7f7f7;
  overflow: hidden
}
.nav view{
  text-align: center
}
.nav view view{
  font-size: 28rpx;
  color: #869DA8
}
.nav view image{
  width: 30rpx;
  margin: 10rpx auto 0;
  display: none
}
.nav .active view{
  color: #3FB1E8
}
.nav .active image{
  display: block
}
.section{
  width: 85%;
  margin: 0 auto;
  overflow: scroll
}
.search{
  width: 100%;
  height: 75rpx;
  background-color: #F7F7F7;
  border-radius: 8rpx;
  margin-top: 30rpx;
  position: relative;
}
.search image{
  position: absolute;
  width: 40rpx;
  margin: auto;
  top: 0;
  bottom: 0;
  left: 20rpx;
}

.search input{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  padding-left: 80rpx;
  color: #869DA8;
  font-size: 24rpx;
}

.goodList{
  
}

.goodItem{
  margin: 30rpx 0;
  width: 100%;
  height: 200rpx;
  position: relative
}

.goodItem image{
  height: 200rpx;
  width: 177rpx;
  float: left;
}

.goodItem .goodName{
  width: 100%;
  position: absolute;
  padding-left: 200rpx;
  color: #344C57;
  font-size: 28rpx;
  line-height: 60rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.goodItem .goodInfo{
  width: 100%;
  position: absolute;
  top: 60rpx;
  padding-left: 200rpx;
  color: #344C57;
  font-size: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.discount{
  position: absolute;
  right: 0;
  bottom: 0;
}