<view class='container'>
  <view class='header'>
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" previous-margin="{{margin}}rpx" next-margin="{{margin}}rpx" circular='{{circular}}' skip-hidden-item-layout ="true" indicator-color='RGB(230,228,228)' indicator-active-color='RGB(234,32,43)'>
      <block wx:for="{{imgUrls}}" wx:key=''>
        <swiper-item>
          <image src="{{item}}" class="slide-image"/>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class='nav'>
    <view bindtap='changeNav' data-index='0' class='{{currentIndex == 0?"active":""}}'>
      <view>热卖</view>
      <image mode='widthFix' src='http://minipro.arvatocrm.cn/arvato/img/?fileName=1544514162965.png'></image>
    </view>
    <view bindtap='changeNav' data-index='1' class='{{currentIndex == 1?"active":""}}'>
      <view>产品系列</view>
      <image mode='widthFix' src='http://minipro.arvatocrm.cn/arvato/img/?fileName=1544514162965.png'></image>
    </view>
    <view bindtap='changeNav' data-index='2' class='{{currentIndex == 2?"active":""}}'>
      <view>面部</view>
      <image mode='widthFix' src='http://minipro.arvatocrm.cn/arvato/img/?fileName=1544514162965.png'></image>
    </view>
    <view bindtap='changeNav' data-index='3' class='{{currentIndex == 3?"active":""}}'>
      <view>眼部</view>
      <image mode='widthFix' src='http://minipro.arvatocrm.cn/arvato/img/?fileName=1544514162965.png'></image>
    </view>
    <view bindtap='changeNav' data-index='4' class='{{currentIndex == 4?"active":""}}'>
      <view>唇部</view>
      <image mode='widthFix' src='http://minipro.arvatocrm.cn/arvato/img/?fileName=1544514162965.png'></image>
    </view>
  </view>
  <view class='section'>
    <view class='search'>
      <image mode='widthFix' src='http://minipro.arvatocrm.cn/arvato/img/?fileName=1543993101764.png'></image>
      <input bindinput='showDemo' placeholder='输入产品名称'></input>
    </view>
    <view class='goodList'>
      <view class='goodItem' bindtap='toGood'>
        <image src='http://minipro.arvatocrm.cn/arvato/img/?fileName=1543996502.png'></image>
        <view class='goodName'>薇姿矿物矿泉系列水活精华液（30ml）</view>
        <view class='goodInfo'>
          <view class='goodIntroduce'>保湿 | 补水</view>
