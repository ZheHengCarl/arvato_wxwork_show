@import "../../../static/utils/common.wxss";
.container{
  width: 100%;
  height: 100%;
  background: #f7f7f7;
}

.nav{
  width:100%;
  height: 80rpx;
  background: #ffffff;
  display: flex;
  justify-content: space-around;
}

.nav view{
  font-size: 28rpx;
  color: #869DA8;
  line-height: 80rpx;
}

.nav .active{
  color: #DA202B;
  border-bottom: 2rpx solid #DA202B
}

.classify{
  height: 72rpx;
  margin: 16rpx 0;
  background: #ffffff;
}

.classify view{
  float: left;
  font-size: 24rpx;
  color: #869CA7;
  margin-top: 24rpx;
  border-right: 2rpx solid #869CA7;
  line-height: 24rpx;
  padding: 0 34rpx;
}

.classify .active{
  color: #344B57
}

.classify .lastBtn{
  border-right: none
}

.section{
  height: 75%;
  overflow-y: scroll;
  overflow-x: hidden
}

.orderItem{
  background: #ffffff;
  height: 350rpx;
  margin-bottom: 16rpx;
}

.itemHead{
  height: 80rpx;
  border-bottom: 2rpx solid #F7F7F7;
}

.itemHead view{
  float: left;
  font-size: 28rpx;
  color: #344C57;
  font-weight: bold;
  margin-top: 26rpx;
  padding: 0 34rpx;
  line-height: 28rpx;
  border-right: 2rpx solid #344C57
}

.itemHead .lastBtn{
  border-right: none;
  font-weight: normal;
}


.itemHead image{
  float: right;
  width: 34rpx;
  height: 30rpx;
  margin: 24rpx 30rpx 0 0;
}

.itemContent{
  padding: 30rpx;
  width: 100%;
  height: 190rpx;
  position: relative;
  border-bottom: 1rpx solid #F7F7F7
}

.itemContent image{
  height: 120rpx;
  width: 120rpx;
  float: left;
}

.itemContent .goodName{
  width: 100%;
  position: absolute;
  padding: 0 30rpx 0 168rpx;
  color: #344C57;
  font-size: 26rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.itemContent .goodInfo {
  font-size: 26rpx;
  color: #869DA7;
  width: 100%;
  position: absolute;
  padding-left: 168rpx;
  bottom: 35rpx;
}

.itemContent .goodState {
  font-size: 24rpx;
  color: #869DA7;
  width: 100%;
  position: absolute;
  bottom: 35rpx;
  right: 30rpx;
  text-align:right;
}

.itemFoot{
  height: 80rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
}

.itemFoot .itemList view{
  float: left;
  font-size: 26rpx;
  color: #869DA7;
  line-height: 80rpx;
}

.itemFoot .itemList .itemMoney{
  font-size: 30rpx;
  color: #354C58;
}

.footer{
  width: 100%;
  background: #ffffff;
  height: 100rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid #E6E4E4;
  z-index: 9
}

.footer view{
  text-align: center;
  position: relative;
  width: 120rpx;
}

.footer view image{
  position: absolute;
  margin: auto;
  left: 0;
  right: 0;
  top: 8rpx;
  width: 45rpx;
  height: 45rpx;
}

.footer view .choose{
  opacity: 1;
  z-index: 1
}

.footer .active .choose{
  opacity: 0;
  z-index: -1
}

.footer view  text{
  font-size: 20rpx;
  color: #BEC6CB;
  display: block;
  text-align: center;
  position: absolute;
  width: 100%;
  top: 66rpx;
}

.footer .active text{
  color: #DA202B
}