@import "../../../static/utils/common.wxss";

.container {
  background: #fff;
  width: 100%;
  height: 100%;
  padding: 30rpx 20rpx;
  background: #f6f6f6;
  overflow-y: scroll;
}

.search {
  width: 100%;
  height: 60rpx;
  background-color: #fff;
  border-radius: 8rpx;
  position: relative;
  margin-bottom: 30rpx;
}

.search image {
  position: absolute;
  width: 30rpx;
  margin: auto;
  top: 0;
  bottom: 0;
  left: 20rpx;
}

.search input {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  padding-left: 80rpx;
  color: #ccc;
  font-size: 26rpx;
}

.materialList {
  width: 100%;
  overflow: hidden;
  background: #f6f6f6;
}

.materialItem {
  width: 100%;
  background: #fff;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.layout{
  width: 100%;
  overflow: hidden;
  position: relative
}

.layout image{
  width: 100%
}

.layout .content{
  position: absolute;
  color: #FFFFFF;
  font-size: 42rpx;
  top: 80rpx;
  left: 60rpx;
}

.layout .lastcontent{
  position: absolute;
  color: #FFFFFF;
  font-size: 42rpx;
  bottom: 80rpx;
  left: 60rpx;
}

.title{
  height: 100rpx;
  padding: 0 20rpx;
  border-bottom: 2rpx solid #f6f6f6;
}

.title view{
  float: left;
  line-height: 100rpx;
  font-size: 28rpx;
}


.title button{
  float: right;
  width: 136rpx;
  height: 56rpx;
  margin-top: 23rpx;
  padding: 0;
  border: none;
  border-radius: 28rpx;
  color: #FFFFFF;
  font-size: 26rpx;
  line-height: 56rpx;
  background: #EB2E39
}