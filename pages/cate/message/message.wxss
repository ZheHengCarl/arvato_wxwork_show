input{
    color: #495057;
    background-color: #fff;
    background-clip: padding-box;
    padding: 0 20rpx;
    box-sizing: border-box;
    border: 1px solid #ced4da;
    height: 80rpx;
    width: 100%;
}

.container{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 20rpx;
}

.container .form-group .addMessage{
  font-size: 56rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.container .form-group label{
  font-size: 32rpx;
  margin-bottom: 16rpx;
  line-height: 80rpx;
}

.container .form-group .addFile{  
    height: 80rpx;
    width: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;
    border: 1px solid #ced4da;
}

.container .form-group .addFile button{  
    height: 50rpx;
    width: 200rpx;
    float: left;
    line-height: 50rpx;
    background: #f2f2f2;
    margin-right: 30rpx;
}

.container .form-group .addFile text{  
    line-height: 80rpx;
    color: #495057;
}

.container .form-group textarea{
    box-sizing: border-box;
    width: 100%;
    padding: 20rpx 40rpx;
    font-size: 32rpx;
    line-height: 1.5;
    color: #495057;
    background-color: #fff;
    background-clip: padding-box;
    border: 1px solid #ced4da;
    border-radius: 10rpx;
}

.container .form-group .btn-primary{
    display: inline-block;
    font-weight: 400;
    text-align: center;
    font-size: 32rpx;
    line-height: 80rpx;
    border-radius: 10rpx;
    color: #fff;
    background-color: #007bff;
    height: 80rpx;
}

.container .form-group .image image {
    display:inline-block;
    height: 200rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx
}

.hideImg{
  display: none
}