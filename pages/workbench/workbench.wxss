  line-height: 40rpx;
}

.choose .chooseId{
  margin-top: 150rpx;
  display: flex;
  justify-content: space-around;
  overflow: hidden
}

.choose .chooseId .chooseItem cover-image{
  width: 100rpx;
  height: 100rpx;
