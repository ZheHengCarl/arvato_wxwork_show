@import "../../../static/utils/common.wxss";
.container{
  background: #ffffff;
  width: 100%;
  height: 100%;
  padding: 30rpx;
}
.search{
  width: 100%;
  height: 6%;
  background-color: #F7F7F7;
  border-radius: 8rpx;
  margin-top: 30rpx;
  position: relative;
}
.search image{
  position: absolute;
  width: 40rpx;
  margin: auto;
  top: 0;
  bottom: 0;
  left: 20rpx;
}

.search input{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  padding-left: 80rpx;
  color: #869DA8;
  font-size: 24rpx;
}

.nav{
  width: 100%;
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #f7f7f7;
  overflow: hiddenï¼›
}
.nav view{
  text-align: center;
  line-height: 80rpx;
}
.nav view view{
  font-size: 28rpx;
  color: #999999
}
.nav .active view{
  color: #DA202B;
  border-bottom: 4rpx solid #DA202B;
}

.section{
  height: 80%;
  overflow: hidden;
}

.tipList{
  height: 100%;
  overflow-y: scroll;
  border-top: 10rpx solid #F7F7F7;
}

.tipItem{
  height: 260rpx;
  width: 100%;
  padding: 30rpx 0;
  position: relative;
  border-bottom: 2rpx solid #F7F7F7;
}

.tipItem image{
  width: 200rpx;
  float: left
}

.tipItem .content{
  position: absolute;
  padding-left: 220rpx;
  font-size: 28rpx;
  color: #333333
}

.tipItem .label{
  width: 90rpx;
  height: 36rpx;
  background: #FFF5EE;
  border-radius: 18rpx;
  color: #FF9351;
  font-size: 24rpx;
  text-align: center;
  position: absolute;
  left: 220rpx;
  bottom: 40rpx;
}

.tipItem .forward{
  width: 150rpx;
  height: 80rpx;
  background: url('http://minipro.arvatocrm.cn/arvato/img/?fileName=1545210703557.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  font-size: 30rpx;
  color: #ffffff;
  line-height: 56rpx;
  text-align: center;
  position: absolute;
  bottom: 20rpx;
  right: 30rpx;
}