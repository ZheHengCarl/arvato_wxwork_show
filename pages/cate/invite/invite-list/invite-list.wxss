@import "../../../../static/utils/common.wxss";
.container{
  background: #f3f3f3;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 40rpx 5%;
}
.container view .title{
  box-sizing: border-box;
  color: #fff;
  background: hsl(352, 86%, 44%);
  text-align: center;
  font-size: 30rpx;
  line-height: 70rpx;
  margin: 0 40rpx 40rpx;
}
.container .scroll-list{
  border-bottom: 1px solid #d0d0d0;
}
.container .scroll-list .lists{
  /* text-align: center; */
  line-height: 96rpx;
  font-size: 32rpx;
  display: flex;
}
.container .scroll-list:first-of-type {
  border-top: 1px solid #d0d0d0;
}
.container .scroll-list .lists .icons{
  width: 48rpx;
  height: 48rpx;
  background: url('http://minipro.arvatocrm.cn/arvato/img/?fileName=catelog-icons.png');
  background-size: 100% auto;
  background-position: 0 -139rpx;
  margin-right: 30rpx;
  margin-top: 20rpx;
}
.container .scroll-list .lists .txt{
  flex: 2;
  font-size: 30rpx;
}