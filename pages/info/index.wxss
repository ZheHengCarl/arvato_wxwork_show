@import "../../static/utils/common.wxss";
.container {
  width: 100%;
  height: 100%;
  background: #F7F7F7;
  padding: 0 30rpx
}

.header{
  height: 20%;
  position: relative;
}

.header open-data{
  width: 160rpx;
  height: 160rpx;
  border-radius: 100%;
  overflow: hidden;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}

.section{
  height: 50%;
  background: #ffffff;
  padding: 70rpx 40rpx;
  position: relative;
}
.section .item{
  width: 100%;
  overflow: hidden;
  font-size: 30rpx;
  line-height: 60rpx;
  color: #999999;
}
.section .item view{
  float: left;
}

.section .item .userData{
  float: right;
  width: 57%;
  color: #333333;
  border-bottom: 2rpx solid #EEEEEE;
  padding-left: 60rpx;
}

.section .addImg{
  width: 500rpx;
  height: 240rpx;
  border-radius: 16rpx;
  background: #F7F7F7;
  position: absolute;
  margin: auto;
  left: 0;
  right: 0;
  bottom: 70rpx;
  font-size: 56rpx;
  text-align: center;
  line-height: 240rpx;
  color: #FA65B2;
}

.addImg image{
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2
}

.footer{
  height: 30%;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.footer button,.footer view{
  width:100%;
  height: 100rpx;
  border-radius: 50rpx;
  border: none;
  line-height: 100rpx;
  background: #DA202B;
  font-size: 34rpx;
  color: #FFFFFF
}

.footer .ignore{
  border: 2rpx solid #E2E2E2;
  background: #ffffff;
  text-align: center;
  color: #999999
}