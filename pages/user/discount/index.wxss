@import "../../../static/utils/common.wxss";
.container{
  width: 100%;
  height: 100%;
  background-color: #fff;
  overflow-y: scroll;
}

.nav{
  height: 100rpx;
  border-bottom: 20rpx solid #F7F7F7;
  display: flex;
  justify-content: space-around;
  line-height: 80rpx;
  color: #A6A6A6;
  font-size: 30rpx;
  font-weight: bold
}

.nav .active{
  color: #DA202B;
  border-bottom: 4rpx solid #DA202B;
}

.content{
  width: 100%;
  padding: 0 30rpx;
}

.title{
  margin: 30rpx 0;
  font-size: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  color:#333333;
  border-left: 6rpx solid #FF5A64;
  padding-left: 20rpx;
  font-weight: bold;
}

.couponList{
  overflow: hidden
}

.couponItem{
  width: 100%;
  height: 200rpx;
  background: url("http://minipro.arvatocrm.cn/arvato/img/?fileName=1545299672995.png");
  background-size: 100% 100%;
  background-repeat: no-repeat;
  padding: 50rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.classify{
  width: 80rpx;
  height: 30rpx;
  background: #FFDDDF;
  border-radius: 14rpx;
  font-size: 18rpx;
  color: #FF5A64;
  line-height: 30rpx;
  text-align: center;
  position: absolute;
  left: 50rpx;
  top: 20rpx;
}

.left{
  height: 100%;
  width: 150rpx;
  float: left;
  position: relative
}

.money{
  height: 80rpx;
  font-size: 60rpx;
  color: #FF5A64;
  line-height: 80rpx;
  font-weight: bold;
}

.dollar{
  font-size: 24rpx;
  color: #FF5A64;
  position: absolute;
  top: 10rpx;
  right: 20rpx;
}

.discount{
  font-size: 30rpx;
}

.explain{
  height: 20rpx;
  font-size: 20rpx;
  line-height: 20rpx;
  color: #FF5A64
}

.right{
  width: 400rpx;
  float: left;
  padding-left: 30rpx;
  border-left: 2rpx solid #FF9DA3;
}

.degree{
  font-size: 28rpx;
  color: #333333;
  line-height: 70rpx;
}

.restTime{
  font-size: 22rpx;
  color: #999999;
  line-height: 30rpx;
}